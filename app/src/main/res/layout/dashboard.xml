<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:orientation="vertical"
        tools:contetxt="br.com.compremelhor.controller.activity.DashboardActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#015488" >

        <!-- TextView for start purchase -->
        <TextView
            android:id="@+id/start_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:clickable="true"
            android:drawableTop="@drawable/sacola"
            android:text="@string/start_purchase"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="60dp"
            android:layout_marginTop="68dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- TextView for edit profile -->
        <TextView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/negocios"
            android:text="@string/edit_profile"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="93dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/start_purchase"
            android:layout_alignStart="@+id/start_purchase" />

        <!-- TextView for Manager Addresses -->
        <TextView
            android:id="@+id/manager_addresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/address"
            android:text="@string/manager_addresses"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_alignBottom="@+id/start_purchase"
            android:layout_alignLeft="@+id/list_purchases"
            android:layout_alignStart="@+id/list_purchases" />

        <!-- TextView for de list of purchases done -->
        <TextView
            android:id="@+id/list_purchases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/list_purchase"
            android:text="@string/list_purchases"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:layout_alignBottom="@+id/edit_profile"
            android:layout_toRightOf="@+id/edit_profile"
            android:layout_toEndOf="@+id/edit_profile" />
    </RelativeLayout>
</LinearLayout>