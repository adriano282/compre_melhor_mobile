<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium" >

    <ImageView
        android:layout_marginTop="30dp"
        android:src="@drawable/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TableLayout

        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:textSize="15dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Valor Total Compra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_purchase_sub_total"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="R$ 560,00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="15dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Valor Frete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_freight_sub_total"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="R$ 80,00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@android:color/black"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:textSize="15dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Valor Total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_value_total_purchase"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="R$ 80,00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

    <Button
        android:onClick="onClickButtonClosePurchase"
        android:id="@+id/btn_close_purchase"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Fechar Compra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle" />
</LinearLayout>