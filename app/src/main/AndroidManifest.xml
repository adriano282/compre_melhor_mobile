<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="br.com.compremelhor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" >
        </meta-data>

        <activity
            android:name=".controller.activity.LoginActivity"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.activity.ShoppingListActivity" />
        <activity
            android:name=".controller.activity.DashboardActivity"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity android:name=".controller.activity.ProfileActivity"
            android:label="Cadastro"
            android:logo="@mipmap/ic_launcher" />

        <activity android:name=".controller.activity.RegisterActivity" />
        <activity android:name=".controller.activity.AddressListActivity" />
        <activity android:name=".controller.activity.AddressActivity" />
        <activity android:name=".controller.activity.PasswordActivity" />
        <activity android:name="com.facebook.FacebookActivity" />

    </application>

</manifest>
