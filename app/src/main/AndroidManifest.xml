<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.compremelhor" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" >
        </meta-data>

        <activity android:name=".activity.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ShoppingActivity"
            android:label="@string/purchase_label"
            android:theme="@style/Theme.Example" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".activity.DashboardActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/action_bar_profile_label" />
        <activity
            android:name=".activity.PasswordActivity"
            android:label="@string/action_bar_change_password_label" />

        <activity
            android:name=".activity.PartnerListActivity"
            android:label="@string/action_bar_partner_label" />

        <activity
            android:name=".activity.ProductActivity"
            android:label="@string/action_bar_cart_item_label" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/register_label" />
        <activity android:name=".activity.PaymentActivity" />
        <activity
            android:name=".activity.AddressListActivity"
            android:label="@string/title_my_addresses" />
        <activity android:name=".activity.AddressActivity" />
        <activity android:name="com.facebook.FacebookActivity" />
    </application>

</manifest>
